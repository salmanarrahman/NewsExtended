<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    app:cardElevation="20dp"
    android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/layoutListCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:ignore="MissingPrefix">

        <ImageView
            android:id="@+id/videoThumbnail"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>




        <TextView
            android:id="@+id/videoheadline"
            fontPath="fonts/Raleway-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:singleLine="false"
            tools:text="dfjhdkjf  jdhfdjf kdjhfkjdfj jhfkjhdfkjhd jhdfjhdfh"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/videoThumbnail"
            />

        <ImageView
            android:id="@+id/playButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/videoheadline"
            app:layout_constraintLeft_toRightOf="@id/videoThumbnail"
            android:src="@drawable/play_button"/>

        <TextView
            android:id="@+id/videoDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintLeft_toRightOf="@id/playButton"
            app:layout_constraintTop_toBottomOf="@id/videoheadline"
            tools:text="10:09" />

        <TextView
            android:id="@+id/videoReporter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Staff Reporter,Dhaka"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>